<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success" style="display: flex; align-items: baseline;">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(user) { %>
      <form style="display: flex; align-items: baseline;"method="POST" action="/logout">
        <p style="margin-right: 4px;">Logged in as: <%= user.email %></p>
        <button type="submit" class="btn btn-dark">Logout</button>
      </form>
    <% } else { %>
      <form method="GET" action="/login">
        <button type="submit" class="btn btn-dark">Login</button>
      </form>
      <form method="GET" action="/register">
        <button type="submit" class="btn btn-dark">Register</button>
      </form>
    <% } %>
  </nav>
</header>